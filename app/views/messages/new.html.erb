<h1 align = "center">New message</h1>

<%= render 'shared/errors', obj: @message %>

<div class = 'row'>
  <div class = 'col-md-12'>
    <%= form_for(@message, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Recipient: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_field :recipient, class: "form-control", placeholder: "Enter recipient's email" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Subject: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_field :subject, class: "form-control", placeholder: "Enter subject of message" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Content: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_area :content, class: "form-control", rows: "7", style: "resize:none", placeholder: "Enter content of message" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'col-sm-offset-2 col-sm-10'>
          <%= f.submit("Send", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
