<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <table>
    <tr>
      <td><%= f.label("email: ") %></td>
      <td><%= f.text_field :email, placeholder: "Enter your email" %></td>
    </tr>

    <tr>
      <td><%= f.label("Password: ") %></td>
      <td><%= f.password_field :password, autocomplete: "off"%></td>
    </tr>
  </table>

  <p>
    <%= f.submit"Log In"%>
    <%= link_to "Sign up", signup_path%>
  </p>
<% end %>
