<h1>Log in</h1>
<div class = 'row'>
  <div class = 'col-md-12'>
    <%= form_for(:session, url: login_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("email: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_field :email, class: "form-control", placeholder: "example@sjsu.edu" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Password: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "password" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'col-sm-offset-2 col-sm-6'>
          <%= f.submit"Log In", class: 'btn btn-primary'%>
        </div>
      </div>
      <div class = 'form-group'>
        <div class = 'col-sm-offset-2 col-sm-2'>
          <%= link_to "Sign up now", signup_path, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
