<h1>Advanced Search</h1>
<div class = 'row'>
  <div class = 'col-md-12'>
    <%= form_for(@adv_search, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Title: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_field :title, class: "form-control", placeholder: "Matches title" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Address: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_field :address, class: "form-control", placeholder: "Matches address" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Description: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_field :description, class: "form-control", placeholder: "Matches description" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Minimum price: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_field :min_price, class: "form-control", placeholder: "Matches prices greater than or equal to" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Maximum price: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_field :max_price, class: "form-control", placeholder: "Matches prices less than or equal to" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'control-label col-sm-2'>
          <%= f.label("Creator: ") %>
        </div>
        <div class = 'control-label col-sm-8'>
          <%= f.text_field :user, class: "form-control", placeholder: "First name, last name, or email" %>
        </div>
      </div>

      <div class = 'form-group'>
        <div class = 'col-sm-offset-2 col-sm-10'>
          <%= f.submit("Search", class: 'btn btn-primary btn-lg')%>
        </div>
      </div>
    <% end %>
  </div>
</div>
